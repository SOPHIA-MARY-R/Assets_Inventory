@inject NavigationManager NavManager
<MudDialog>
    <TitleContent>
        <MudText Typo="Typo.h6"><MudIcon Icon="@Icons.Material.Filled.Memory" Class="mr-3 mb-n1" />Add Memory Card</MudText>
    </TitleContent>
    <DialogContent>
        <EditForm Model="Model" OnValidSubmit="Submit">
            <MudGrid>
                <MudItem xs="12">
                    <MudTextField Label="Serial Number" Variant="Variant.Outlined" Margin="Margin.Dense" @bind-Value="Model.SerialNumber" />
                </MudItem>
                <MudItem xs="12">
                    <MudTextField Label="Manufacturer" Variant="Variant.Outlined" Margin="Margin.Dense" @bind-Value="Model.Manufacturer" />
                </MudItem>
                <MudItem xs="12">
                    <MudTextField Label="Capacity(in GB)" Variant="Variant.Outlined" Margin="Margin.Dense" @bind-Value="Model.CapacityInGB" />
                </MudItem>
                <MudItem xs="12">
                    <MudTextField Label="Memory Type" Variant="Variant.Outlined" Margin="Margin.Dense" @bind-Value="Model.MemoryType" />
                </MudItem>
                <MudItem xs="12">
                    <MudTextField Label="Speed" Variant="Variant.Outlined" Margin="Margin.Dense" @bind-Value="Model.Speed" />
                </MudItem>
                <MudItem xs="12">
                    <MudTextField Label="Form Factor" Variant="Variant.Outlined" Margin="Margin.Dense" @bind-Value="Model.FormFactor"/>
                </MudItem>
            </MudGrid>
        </EditForm>
    </DialogContent>    
    <DialogActions>
        <MudButton Class="me-2" OnClick="MudDialog.Cancel">Cancel</MudButton>
        <MudButton Variant="Variant.Filled" Color="Color.Primary" ButtonType="ButtonType.Submit" DisableElevation>Submit</MudButton>
    </DialogActions>
</MudDialog>
@code 
{
    [CascadingParameter] 
    private MudDialogInstance MudDialog { get; set; }

    [Parameter]
    public MemoryModel Model { get; set; } = new();

    private void Submit() 
    {
        MudDialog.Close(DialogResult.Ok(Model));
    }

    [Inject] ISnackbar Snackbar { get; set; }
}
