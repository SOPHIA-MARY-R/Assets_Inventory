@inject NavigationManager NavManager
<MudDialog>
    <TitleContent>
        <MudText Typo="Typo.h6"><MudIcon Icon="@Icons.Material.Filled.Keyboard" Class="mr-3 mb-n1" />Add Mouse</MudText>
    </TitleContent>
    <DialogContent>
        <EditForm Model="Model" OnValidSubmit="Submit">
            <MudGrid>
                <MudItem xs="12">
                    <MudTextField Label="Serial Number" Variant="Variant.Outlined" Margin="Margin.Dense" @bind-Value="Model.SerialNumber" />
                </MudItem>
                <MudItem xs="12">
                    <MudTextField Label="Manufacturer" Variant="Variant.Outlined" Margin="Margin.Dense" @bind-Value="Model.Manufacturer" />
                </MudItem>
                <MudItem xs="12">
                    <MudTextField Label="Model" Variant="Variant.Outlined" Margin="Margin.Dense" @bind-Value="Model.Model" />
                </MudItem>
                <MudItem xs="12" Class="d-flex">
                    <MudSwitch @bind-Checked="Model.IsWireless" Color="Color.Info" Label="Wireless" Class="mx-auto" />
                </MudItem>
            </MudGrid>
        </EditForm>
    </DialogContent>    
    <DialogActions>
        <MudButton Class="me-2" OnClick="MudDialog.Cancel">Cancel</MudButton>
        <MudButton Variant="Variant.Filled" Color="Color.Primary" ButtonType="ButtonType.Submit" DisableElevation>Submit</MudButton>
    </DialogActions>
</MudDialog>
@code 
{
    [CascadingParameter] 
    private MudDialogInstance MudDialog { get; set; }

    [Parameter]
    public MouseModel Model { get; set; } = new();

    private void Submit() 
    {
        MudDialog.Close(DialogResult.Ok(Model));
    }

    [Inject] ISnackbar Snackbar { get; set; }
}
